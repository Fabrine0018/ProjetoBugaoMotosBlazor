@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Produto produto1 { get; set; } = new();

    private List<Produto> listaProduto = new();

    protected override void OnInitialized()
    {
        CarregarProduto();
        // buscar o servi√ßo por id
        var _produto = produtoDAO.BuscarProd(Id);
        if (_produto != null)
        {
            produto1 = _produto;
        }
        else
        {
            erro = "Produto n√£o encontrado!";
        }
    }

    private void Excluir(int id)
    {
        try
        {
            produtoDAO.Deletar(id);
            Navigation.NavigateTo("/ConsultaProduto", forceLoad: true);
        }
        catch (Exception ex)
        {
            erro = ($"Erro ao excluir o produto: {ex.Message}");
        }
        CarregarProduto();
    }

    private void CarregarProduto()
    {
        listaProduto = produtoDAO.ListarProd();
    }
}
