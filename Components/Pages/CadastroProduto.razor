@page "/CadastroProduto"
@rendermode InteractiveServer

@using AppBugaoMotoFVLE.Components.Models;
@inject ProdutoDAO produtoDAO;
@inject NavigationManager Navigation;

@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/"> Início </a> </li> <!-- Inicio é Home-->
    <li class="breadcrumb-item active"> <a class="active"> Cadastrar: <span> Produto </span> </a></li>
</ol>

<div class="border p-4 rounded bg-white">
    <div class="borda-esquerda">
        <h3>Cadastro do produto</h3>
        <p>Preencha todas as informações corretamente</p>
    </div>

    <EditForm Model="_novoProduto" OnSubmit="Salvar">
        <input @bind-value="_novoProduto!.Nome" type="text" placeholder="Nome do Produto">

        <div class="row">
            <div class="col-4">
                <label>Código:</label>
                <input @bind-value="_novoProduto!.Codigo" type="text" placeholder="001">
                </div>
            <div class="col-4">
                <label>Quantidade:</label>
                <input @bind-value="_novoProduto!.Quantidade" type="number" >
                </div>
            <div class="col-4">
                <label>Valor Unitário:</label>
                <input @bind-value="_novoProduto!.Valor" type="text" placeholder="R$0,00">
                </div>
        </div>

        <div class="grupo-botao">
            <button type="submit" class="btn-salvar">Salvar</button>
            <a href="/ConsultaProduto" class="btn-deletar">Cancelar</a>
   
        </div>
    </EditForm>
</div>

@code {
    private string? erro = null;
    [SupplyParameterFromForm]
    private Produto? _novoProduto { get; set; } = new Produto();

    private void Salvar(EditContext context)
    {
        try
        {
            if (string.IsNullOrWhiteSpace(_novoProduto.Nome))
            {
                throw new Exception("O campo Nome é obrigatório");
            }

            produtoDAO.InserirProduto(_novoProduto);
            Navigation.NavigateTo("/Estoque");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }

}
