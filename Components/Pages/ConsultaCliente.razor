@page "/ConsultaCliente"

@using AppBugaoMotoFVLE.Components.Models;
@inject ClienteDAO clienteDAO
@inject NavigationManager Navigation;

<div class="container-md pt-3">
    <div class="breadcrumb">
        <a href="/"> Home </a> • <a> Consultar Cliente </a>
    </div>

    <div class="border p-4 rounded">
        <h2>Consultar Cliente 🔍</h2>

        <div class="search-bar mb-3 d-flex gap-2">
            <input type="text" placeholder="Buscar" class="form-control" />
            <button class="btn btn-filter"> <i class="fa-solid fa-filter"></i> Filtrar</button>
            <a href="/CadastroCliente" class="btn btn-add"> <i class="fi fi-sr-user-add"></i> Adicionar novo cliente</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th># </th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int contador = 1;
                    foreach (var cliente in listaCliente)
                    {
                        <tr>
                            <td> @contador </td>
                            <td>@cliente.Nome</td>
                            <td>@cliente.Telefone</td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#visualizar-@cliente.Id" class="btn btn-dark"> <i class="bi bi-eye-fill"></i> </a>
                                <a href="/Atualizar-Cliente-@cliente.Id" class="btn btn-info"> <i class="bi bi-pencil-square"></i> </a>
                                <a data-bs-toggle="modal" data-bs-target="#excluir-@cliente.Id" class="btn btn-danger"> <i class="bi bi-trash3-fill"></i> </a>
                            </td>
                        </tr>
                        contador++;
                    }
                }
            </tbody>
        </table>
    </div>

    @* Modais (um por cliente) *@
    @{
        foreach (var cliente in listaCliente)
        {
            // evitar problema de closure capturando a mesma variável em todas as iterações
            var clienteLocal = cliente;
        }
    }

    @* Note: para renderizar os modais em sequência - outro foreach separado para garantir scoping correto *@
    @{
        foreach (var cliente in listaCliente)
        {
            var clienteLocal = cliente;
            <!-- Modal Visualizar -->
            <div class="modal fade" id="visualizar-@clienteLocal.Id" tabindex="-1" aria-labelledby="visualizarLabel-@clienteLocal.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header d-flex justify-content-between">
                            <h1 class="modal-title fs-5" id="visualizarLabel-@clienteLocal.Id"> Visualizar Cliente </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12 mb-3 mt-3">
                                    <label class="mb-1">Nome do Cliente:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Nome" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3 mt-3">
                                    <label class="mb-1">Telefone:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Telefone" readonly />
                                </div>
                                <div class="col-6 mb-3 mt-3">
                                    <label class="mb-1">CPF:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Cpf" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3 mt-3">
                                    <label class="mb-1">Cidade:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Cidade" readonly />
                                </div>
                                <div class="col-6 mb-3 mt-3">
                                    <label class="mb-1">Estado:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Estado" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3 mt-3">
                                    <label class="mb-1">Rua:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Rua" readonly />
                                </div>
                                <div class="col-6 mb-3 mt-3">
                                    <label class="mb-1">Bairro:</label>
                                    <input type="text" class="form-control" value="@clienteLocal.Bairro" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-3 mt-3">
                                    <label class="mb-1">Complemento:</label>
                                    <textarea class="form-control" readonly>@clienteLocal.Complemento</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="excluir-@clienteLocal.Id" tabindex="-1" aria-labelledby="excluirLabel-@clienteLocal.Id" aria-hidden="true">
                <EditForm Model="@clienteLocal" OnValidSubmit="() => Excluir(clienteLocal.Id)">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header d-flex justify-content-between">
                                <h1 class="modal-title fs-5" id="excluirLabel-@clienteLocal.Id"> Excluir cliente </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h5 class="text-center">Você tem certeza que deseja excluir o(a) cliente <strong>@clienteLocal.Nome</strong>? Após a exclusão não será possível recuperar esse registro.  </h5>
                            </div>
                            <div class="modal-footer justify-content-between">
                                <button type="button" class="btn btn-info btn-lg" data-bs-dismiss="modal"> Cancelar</button>
                                <button type="submit" class="btn btn-danger btn-lg"> Deletar </button>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        }
    }
</div>

@code {

    private string erro = string.Empty;

    private List<Cliente> listaCliente = new();

    protected override void OnInitialized()
    {
        CarregarCliente();
    }

    private void CarregarCliente()
    {
        listaCliente = clienteDAO.ListarCliente() ?? new List<Cliente>();
    }

    private void Excluir(int id)
    {
        try
        {
            clienteDAO.Deletar(id);

            // Recarrega a lista pra remover o item da tela
            CarregarCliente();

            // Força reload para garantir que o modal seja fechado (opcional)
            Navigation.NavigateTo("/ConsultaCliente", forceLoad: true);
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir o(a) cliente: {ex.Message}";
        }
    }
}
